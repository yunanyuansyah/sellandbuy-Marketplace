    <!-- Content -->
    <div
      id="content"
      class="flex-grow w-full flex flex-col align-middle justify-center mt-[101.2px] sm:mt-[96px] mb-10 relative"
    >

    <!-- Header Section -->
      <section class="profile-section flex flex-col sm:flex-none w-full sm:w-1/2 max-w-5xl mx-auto p-8">
        <% if (messages.error && messages.error.length > 0) { %>
          <div class="bg-red-500 text-white p-4 mb-4 rounded">
            <% messages.error.forEach(function(message) { %>
              <p><%= message %></p>
            <% }) %>
          </div>
        <% } %>
        
        <% if (messages.success && messages.success.length > 0) { %>
          <div class="bg-green-500 text-white p-4 mb-4 rounded">
            <% messages.success.forEach(function(message) { %>
              <p><%= message %></p>
            <% }) %>
          </div>
        <% } %>
        <div class="flex items-end">
          <div class="flex-initial">
            <h1 class="text-3xl font-bold text-left mt-12 mb-4" style="width: 13.2rem;">Profil Pengguna</h1>
          </div>

          <div>
            <h1 class="text-black text-xl mt-12 mb-4 font-thin"><%= user.membership %></h1>
          </div>
        </div>
        <hr class="h-px bg-black border-0 dark:bg-gray-700">

        <!-- Profile Picture -->
        <div class="profile-info flex flex-col sm:flex-row mb-4 sm:mb-0 mt-8">
          <div class="profile-picture mb-4 text-center sm:mr-8 sm:ml-0">
            <form action="/profile/update-picture" method="POST" enctype="multipart/form-data">
              <img
                class="rounded-full h-48 w-48 mx-auto sm:mx-0 object-cover"
                src="<%= user.profilePicturePath %>"
                alt="User Picture" 
              />
              <input type="file" name="profilePicture" accept="image/*" class="mt-4 px-4 py-2 rounded-full bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-400" />
              <button type="submit" class="mt-4 px-4 py-2 rounded-full bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400">Pilih Foto</button>
            </form>
          </div>        

          <!-- Profile Details -->
          <div class="profile-details w-full">
            <form action="/profile/update" method="POST">
              <!-- Name -->
              <div class="mb-4">
                <label class="block text-gray-700 text-2xl font-semibold mb-2">Nama Pengguna</label>
                <hr class="h-px bg-black border-0 dark:bg-gray-700">
                <div class="flex justify-between">
                  <div class="flex-auto mt-1 items-center">
                    <input
                      type="text"
                      id="usernameInput"
                      name="username"
                      value="<%= user.username %>"
                      class="w-full p-2 py-1 text-2xl font-thin rounded-xl"
                      readonly
                    />
                  </div>
                  <div class="flex-none">
                    <button
                      id="editButtonUsername"
                      class="pl-2 py-3 font-semibold"
                      type="button"
                      onclick="enableEdit('usernameInput', 'editButtonUsername', 'saveButtonUsername')"
                    >
                      Ubah
                    </button>
                    <button
                      id="saveButtonUsername"
                      class="px-2 py-3 font-semibold hidden"
                      type="submit"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M10 20A10 10 0 1 0 0 10a10 10 0 0 0 10 10zM8.711 4.3l5.7 5.766L8.7 15.711l-1.4-1.422 4.289-4.242-4.3-4.347z"/></svg>
                    </button>
                  </div>
                </div>
              </div>

              <!-- Birthdate -->
              <div class="mb-4">
                <label class="block text-gray-700 text-2xl font-semibold mb-2">Tanggal Lahir</label>
                <hr class="h-px bg-black border-0 dark:bg-gray-700">
                <div class="flex justify-between">
                  <div class="flex-auto mt-1 items-center">
                    <input
                      type="text"
                      id="birthdateInput"
                      name="birthdate"
                      value="<%= user.birthdate.toDateString() %>"
                      class="w-full p-2 py-1 text-2xl font-thin rounded-xl"
                      readonly
                    />
                  </div>
                  <div class="flex-none">
                    <button
                      id="editButtonBirthdate"
                      class="pl-2 py-3 font-semibold"
                      type="button"
                      onclick="enableEdit('birthdateInput', 'editButtonBirthdate', 'saveButtonBirthdate', true)"
                    >
                      Ubah
                    </button>
                    <button
                      id="saveButtonBirthdate"
                      class="px-2 py-3 font-semibold hidden"
                      type="submit"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M10 20A10 10 0 1 0 0 10a10 10 0 0 0 10 10zM8.711 4.3l5.7 5.766L8.7 15.711l-1.4-1.422 4.289-4.242-4.3-4.347z"/></svg>
                    </button>
                  </div>
                </div> 
              </div>
            
              <!-- Phone Number -->
              <div class="mb-4">
                <label class="block text-gray-700 text-2xl font-semibold mb-2">Nomor Telepon</label>
                <hr class="h-px bg-black border-0 dark:bg-gray-700">
                <div class="flex justify-between">
                  <div class="flex-auto mt-1 items-center">
                    <input
                      type="text"
                      id="phoneInput"
                      name="phone"
                      value="<%= user.phone %>"
                      class="w-full p-2 py-1 text-2xl font-thin rounded-xl"
                      readonly
                    />
                  </div>
                  <div class="flex-none">
                    <button
                      id="editButtonPhone"
                      class="pl-2 py-3 font-semibold"
                      type="button"
                      onclick="enableEdit('phoneInput', 'editButtonPhone', 'saveButtonPhone')"
                    >
                      Ubah
                    </button>
                    <button
                      id="saveButtonPhone"
                      class="px-2 py-3 font-semibold hidden"
                      type="submit"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M10 20A10 10 0 1 0 0 10a10 10 0 0 0 10 10zM8.711 4.3l5.7 5.766L8.7 15.711l-1.4-1.422 4.289-4.242-4.3-4.347z"/></svg>
                    </button>
                  </div>
                </div> 
              </div>
            
              <!-- Email -->
              <div class="mb-4">
                <label class="block text-gray-700 text-2xl font-semibold mb-2">Email Pengguna</label>
                <hr class="h-px bg-black border-0 dark:bg-gray-700">
                <div class="flex justify-between">
                  <div class="flex-auto mt-1 items-center">
                    <input
                      type="text"
                      id="emailInput"
                      name="email"
                      value="<%= user.email %>"
                      class="w-full p-2 py-1 text-2xl font-thin rounded-xl"
                      readonly
                    />
                  </div>
                  <div class="flex-none">
                    <button
                      id="editButtonEmail"
                      class="pl-2 py-3 font-semibold"
                      type="button"
                      onclick="enableEdit('emailInput', 'editButtonEmail', 'saveButtonEmail')"
                    >
                      Ubah
                    </button>
                    <button
                      id="saveButtonEmail"
                      class="px-2 py-3 font-semibold hidden"
                      type="submit"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"><path d="M10 20A10 10 0 1 0 0 10a10 10 0 0 0 10 10zM8.711 4.3l5.7 5.766L8.7 15.711l-1.4-1.422 4.289-4.242-4.3-4.347z"/></svg>
                    </button>
                  </div>
                </div> 
              </div>
            </form>
          </div>          
        </div>
      </section>

      <!-- Products Section -->
      <section class="w-full sm:w-1/2 max-w-5xl mx-auto p-8">
        <h1 class="text-3xl font-bold text-left mt-12 mb-4">Etalase Barang Anda</h2>
        <hr class="h-px bg-black border-0 dark:bg-gray-700">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
          <% products.forEach(product => { %>
            <div class="product-card p-4 border rounded-lg cursor-pointer hover:bg-gray-100 transition delay-100" onclick="location.href='/profile/product/<%= product._id %>'">
              <img
                src="/<%= product.images[0] %>"
                alt="Product Image"
                class="w-full h-64 object-cover rounded-lg"
              />
              <h3 class="text-lg font-semibold mt-2"><%= product.productName %></h3>
              <p class="text-sm text-gray-600">Rp. <%= product.price %></p>
              <div class="flex flex-row justify-between">
                <div class="text-sm">
                  <div class="flex flex-row">
                    <div><img src = "/images/svg/location_1.svg" alt="Location Icon"></div>
                    <div><p> <%= product.location.length > 10 ? product.location.substring(0, 10) + "..." : product.location %> </p></div>
                  </div>
                </div>
                <div class="text-sm">
                  <%= product.createdAt.toDateString() %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </section>
    </div>

