    <script>
      function toggleMenu(event) {
        const menu = document.getElementById('menu');
        const isHidden = menu.classList.contains('hidden');
        menu.classList.toggle('hidden', !isHidden);
        menu.setAttribute('aria-expanded', !isHidden);
        event.currentTarget.setAttribute('aria-expanded', !isHidden);
      }
      
      const menuButton = document.getElementById('menu-button');
      menuButton.addEventListener('click', toggleMenu);
      
      document.addEventListener('click', (event) => {
        const menu = document.getElementById('menu');
        if (!menuButton.contains(event.target) && !menu.contains(event.target)) {
          menu.classList.add('hidden');
          menuButton.setAttribute('aria-expanded', 'false');
        }
      });
      
      function enableEdit(inputId, editButtonId, saveButtonId, isDateField = false) {
        var inputElement = document.getElementById(inputId);
        var editButton = document.getElementById(editButtonId);
        var saveButton = document.getElementById(saveButtonId);

        inputElement.removeAttribute('readonly');

        if (isDateField) {
          inputElement.type = 'date';
        }

        inputElement.classList.add('edit-mode');
        editButton.classList.add('hidden');
        saveButton.classList.remove('hidden');

        inputElement.focus();
      }

      function disableEdit(inputId, editButtonId, saveButtonId, isDateField = false) {
        var inputElement = document.getElementById(inputId);
        var editButton = document.getElementById(editButtonId);
        var saveButton = document.getElementById(saveButtonId);

        inputElement.setAttribute('readonly', true);

        if (isDateField) {
          inputElement.type = 'text';
          inputElement.value = new Date(inputElement.value).toDateString();
        }

        inputElement.classList.remove('edit-mode');

        editButton.classList.remove('hidden');
        saveButton.classList.add('hidden');
      }
    </script>

    <script src="/js/script.js"></script>
  </body>
</html>
