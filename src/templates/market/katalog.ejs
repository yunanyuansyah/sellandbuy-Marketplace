<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sell & Buy - Marketplace</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Saira+Semi+Condensed:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/katalog.css" />
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
  </head>
  <body class="min-h-screen flex flex-col font-saira">
    <!-- Navbar -->
    <div id="nav-wrp" class="w-full mb-20">
      <header
        id="navbar"
        class="w-screen bg-white fixed flex items-center justify-center flex-col inset-x-0 top-0 z-50 overflow-visible"
      >
        <div
          id="top-nav"
          class="w-full flex items-center justify-between px-2 sm:px-5 sm:py-4 py-5"
        >
        <div id="left-part" class="flex justify-start">
          <div class="relative inline-block text-left">
            <div>
              <button
                type="button"
                class="inline-flex w-full justify-center gap-x-1.5 rounded-md bg-black px-3 py-2 text-sm font-semibold text-white shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-900"
                id="menu-button"
                aria-expanded="false"
                aria-haspopup="true"
              >
                Kategori
              </button>
            </div>
            <div
            class="absolute overflow-visible left-0 z-40 mt-2 w-56 origin-top-right rounded-xl bg-black shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden transition-all ease-in-out"
            role="menu"
            aria-orientation="vertical"
            aria-labelledby="menu-button"
            tabindex="-1"
            id="menu"
            >          
              <div class="py-1 z-50 bg-black rounded-xl" role="none">
                <% categories.forEach(category => { %>
                <button
                  class="block overflow-visible w-52 z-50 mx-auto px-4 py-2 text-center text-sm bg-black text-white cursor-pointer hover:underline hover:underline-offset-4 hover:decoration-white"
                  role="menuitem"
                  onclick="location.href = '/katalog?category=<%= category._id %>'"
                >
                  <%= category.name %>
                </button>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
          <a
            href="/"
            id="navbar-logo"
            class="sm:ml-36 flex items-center justify-center"
          >
            <img
              id="logo"
              class="h-5 sm:h-9 cursor-pointer"
              src="/images/navbar-logo.png"
            />
          </a>
          <div id="pfl" class="text-right sm:flex w-auto h-auto justify-end">
            <a
              id="sell"
              href="/jual"
              class="flex rounded-full justify-end mr-2 sm:mr-0 shadow-sm hover:bg-slate-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-700"
            >
              <img class="w-btn-pfl" src="/images/tambahkan.png" />
            </a>
            <div
              id="srch-bar"
              class="relative hidden sm:flex px-[10px] rounded-full items-center lg:w-auto hover:bg-slate-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-700"
            >
              <form
                action="/katalog"
                method="GET"
                class="w-full flex items-center"
                id="searchForm"
              >
                <span class="sr-only">Search</span>
                <span
                  id="srch-icon"
                  class="absolute left-0 flex items-center pl-5"
                >
                  <svg
                    class="h-5 w-5 fill-black"
                    data-slot="icon"
                    fill="currentColor"
                    viewBox="0 0 16 16"
                    xmlns="http://www.w3.org/2000/svg"
                    aria-hidden="true"
                  >
                    <path
                      clip-rule="evenodd"
                      fill-rule="evenodd"
                      d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
                    ></path>
                  </svg>
                </span>
                <input
                  id="srch-input"
                  class="font-saira placeholder:italic placeholder:text-gray-600 bg-white w-full border-2 border-black rounded-xl py-[1px] pr-3 md:pl-7 shadow-sm focus:outline-none focus:border-black focus:ring-black focus:ring-1 sm:text-sm lg:pl-6"
                  placeholder="Search..."
                  type="text"
                  name="search"
                />
              </form>
            </div>
          </div>
        </div>
        <div
          id="bot-nav"
          class="w-full flex items-center justify-center py-2 sm:px-[20px]"
        >
          <form
            action="/katalog"
            method="GET"
            class="w-full flex items-center"
            id="searchForm"
          >
            <div
              id="srch-bar"
              class="relative flex sm:hidden w-full px-[10px] rounded-full items-center hover:bg-slate-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-700"
            >
              <span class="sr-only">Search</span>
              <span
                id="srch-icon"
                class="absolute left-0 flex items-center pl-5"
              >
                <svg
                  class="h-5 w-5 fill-black"
                  data-slot="icon"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                  xmlns="http://www.w3.org/2000/svg"
                  aria-hidden="true"
                >
                  <path
                    clip-rule="evenodd"
                    fill-rule="evenodd"
                    d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
                  ></path>
                </svg>
              </span>
              <input
                id="srch-input"
                class="font-saira placeholder:italic placeholder:text-gray-600 bg-white w-full border-2 border-black rounded-xl py-[1px] pr-3 md:pl-7 shadow-sm focus:outline-none focus:border-black focus:ring-black focus:ring-1 text-sm pl-6"
                placeholder="Search..."
                type="text"
                name="search"
              />
            </div>
          </form>
        </div>
      </header>
    </div>

    <!-- Content -->
    <div
      id="content"
      class="flex-grow w-full mt-[101.2px] sm:mt-[96px] mb-10 relative"
    >
      <div
        class="content-wraper flex flex-col xl:flex-row container mx-auto py-8 xl:divide-solid xl:divide-x-2 z-10"
      >
        <!-- Sorting and Filters Section -->
        <div class="z-10">
          <div
            class="filter-section grid-cols-2 gap-6 mb-8 xl:mb-0 md:grid-cols-3 xl:grid-cols-1 mx-4 xl:mx-0 2xl:w-60"
          >
            <div class="grid grid-cols-subgrid col-span-2 sm:col-span-3">
              <h2 class="text-xl font-bold mb-4">Urutkan menurut:</h2>
              <select
                class="w-full xl:mb-32 px-4 py-2 border rounded-lg focus:outline-none focus:border-black"
                id="sort-select"
                name="sort"
                form="searchForm"
              >
                <option selected disabled hidden>Urutkan</option>
                <option value="low_price">Harga Terendah</option>
                <option value="high_price">Harga Tertinggi</option>
              </select>
            </div>
            <div class="grid grid-cols-subgrid col-span-2 sm:col-span-3">
              <h2 class="text-xl font-bold xl:mb-4">Filters :</h2>
            </div>
            <div>
              <select
                class="w-full xl:mb-32 px-4 py-2 border rounded-lg focus:outline-none focus:border-black"
                id="price-filter"
                name="price"
                form="searchForm"
              >
                <option selected disabled hidden>Harga</option>
                <option value="50001">< Rp.50.000</option>
                <option value="50000-100000">Rp.50.000 - Rp.100.000</option>
                <option value="100000-150000">Rp.100.000 - Rp.150.000</option>
                <option value="150001">> Rp.150.000</option>
              </select>
            </div>
            <div>
              <select
                class="w-full xl:mb-4 px-4 py-2 border rounded-lg focus:outline-none focus:border-black"
                id="location-filter"
                name="location"
                form="searchForm"
              >
                <option selected disabled hidden>Lokasi</option>
                <option value="DIY">Dalam D.I.Yogyakarta</option>
                <option value="Outside DIY">Luar D.I.Yogyakarta</option>
              </select>
            </div>
            <button
              type="submit"
              form="searchForm"
              class="bg-black text-white px-4 py-2 mt-4 rounded-lg"
            >
              Apply Filters
            </button>
          </div>
        </div>

        <!-- Product Listing Section -->
        <div class="katalog sm:w-screen ml-4 md:w-3/4 xl:pl-4">
          <h1 class="text-4xl font-bold mb-2">Katalog</h1>
          <hr class="line h-px w-full bg-black border-0 dark:bg-gray-700" />
          <div
            class="mt-4 mr-8 cl:mr-0 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
          >
            <!-- Product Cards -->
            <% products.forEach(product => { %>
            <div
              class="bg-white p-4 rounded-lg shadow-lg cursor-pointer"
              onclick="location.href='/katalog/<%= product._id %>';"
            >
              <img
                src="<%= product.images[0] %>"
                alt="<%= product.productName %>"
                class="w-full h-72 object-cover rounded-lg mb-4"
              />
              <h2 class="text-xl font-bold mb-2"><%= product.productName %></h2>
              <p class="mb-2 text-xl font-bold">
                Rp. <%= product.price.toLocaleString() %>
              </p>
              <div class="flex flex-row items-center mb-2 justify-between">
                <div class="flex flex-row items-center">
                  <div>
                    <img
                      class="w-4 h-auto max-w-10"
                      src="/images/svg/location_1.svg"
                      alt="Location Icon"
                    />
                  </div>
                  <div>
                    <p class="font-light text-lg ml-1">
                      <%= product.location %>
                    </p>
                  </div>
                </div>
                <p class="font-light">
                  <i class="fas fa-calendar-alt"></i> <%= new
                  Date(product.createdAt).toLocaleDateString() %>
                </p>
              </div>
            </div>
            <% }) %>
          </div>
          <!-- Pagination -->
          <div
            class="flex justify-center items-center place-content-baseline mt-8"
          >
            <% for (let i = 1; i <= totalPages; i++) { %>
            <button
              class="px-3 py-1 border rounded-lg mx-1 <%= i === currentPage ? 'bg-black text-white' : '' %>"
              onclick="location.href='/katalog?page=<%= i %>'"
            >
              <%= i %>
            </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto">
      <div id="ftr-wrp">
        <div
          id="ftr"
          class="grid grid-cols-1 grid-rows-1 gap-y-[2px] flex-col items-center bg-white text-white font-saira"
        >
          <div
            id="top-ftr"
            class="flex flex-row items-center justify-between pt-[15px] pb-3 px-2 sm:px-16 bg-black text-[10px] sm:text-[20px]"
          >
            <div
              id="cstmr-srvc"
              class="w-fit flex flex-row items-center justify-start"
            >
              <a href="/faq" class="leading-6">FAQ</a>
              <h1 id="divider" class="mx-3 text-sm">|</h1>
              <a href="/privacy" class="leading-6">Privacy Policy</a>
              <h1 id="divider" class="mx-3 text-sm">|</h1>
              <a href="/tos" class="leading-6">Terms & Condition</a>
            </div>
            <div id="c-right" class="w-auto flex justify-end items-center">
              <h1>CopyRight © 2024 Sell&Buy</h1>
            </div>
          </div>
          <div
            id="bot-ftr"
            class="flex flex-col sm:flex-row bg-black px-2 sm:px-16 py-3.5 sm:py-7 justify-between"
          >
            <div
              id="cmpny"
              class="w-1/2 sm:w-2/3 flex flex-col sm:flex-row justify-between sm:justify-start"
            >
              <img
                src="/images/footer-logo.png"
                class="w-[150px] sm:w-[300px] mr-[5px]"
              />
              <span
                class="flex flex-col justify-between items-start text-[10px] sm:text-[15px]"
              >
                <h1 class="flex align-top justify-start text-left">
                  Alamat: Jl. Komojoyo No.16, Caturtunggal, Daerah Istimewa
                  Yogyakarta
                </h1>
                <h1 class="flex align-top justify-start text-left">
                  Phone: 0822-4671-3849
                </h1>
                <h1 class="flex align-top justify-start text-left">
                  Email: sellandbuy@gmail.com
                </h1>
              </span>
            </div>
            <div
              id="social"
              class="w-1/2 sm:w-1/3 flex flex-row justify-between items-center"
            >
              <a href="#" class="flex items-center"
                ><img src="/images/instagram.png"
              /></a>
              <a href="#" class="flex items-center"
                ><img src="/images/whatsapp.png"
              /></a>
              <a href="#" class="flex items-center"
                ><img src="/images/linkedin.png"
              /></a>
              <a href="#" class="flex items-center"
                ><img src="/images/email.png"
              /></a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      function toggleMenu(event) {
        const menu = document.getElementById("menu");
        const isHidden = menu.classList.contains("hidden");
        menu.classList.toggle("hidden", !isHidden);
        menu.setAttribute("aria-expanded", !isHidden);
        event.currentTarget.setAttribute("aria-expanded", !isHidden);
      }

      const menuButton = document.getElementById("menu-button");
      menuButton.addEventListener("click", toggleMenu);

      document.addEventListener("click", (event) => {
        const menu = document.getElementById("menu");
        if (
          !menuButton.contains(event.target) &&
          !menu.contains(event.target)
        ) {
          menu.classList.add("hidden");
          menuButton.setAttribute("aria-expanded", "false");
        }
      });
    </script>

    <script src="/js/script.js"></script>
  </body>
</html>

