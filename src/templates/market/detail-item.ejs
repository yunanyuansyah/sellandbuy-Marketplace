    </div>

    <!-- Content -->
    <div
      id="content"
      class="flex-grow w-full mt-[101.2px] sm:mt-[96px] mb-10 relative"
    >
      <div class="p-6 lg:my-auto">
        <div
          class="flex flex-col sm:flex-row lg:divide-x-2 lg:divide-solid lg:divide-black"
        >
          <!-- Images Section -->
          <div class="w-full lg:w-1/2 mr-5 mb-4 sm:mb-0 md:my-auto">
            <div class="relative max-w-2xl mx-auto">
              <div class="slider-container overflow-hidden relative">
                <div
                  class="slides flex transition-transform duration-300 ease-in-out"
                  style="transform: translateX(0%)"
                >
                  <% product.images.forEach((image, index) => { %>
                  <div class="slide w-full flex-none">
                    <img
                      src="/<%= image %>"
                      alt="Product Image <%= index + 1 %>"
                      class="object-cover rounded-lg w-full h-[300px] sm:h-[400px] lg:h-[500px]"
                    />
                  </div>
                  <% }) %>
                </div>
              </div>
              <button
                id="prevBtn"
                class="absolute top-1/2 left-2 transform -translate-y-1/2 bg-white bg-opacity-70 hover:bg-opacity-100 transition p-3 rounded-full focus:outline-none"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  class="w-8 h-8 text-gray-800"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 19l-7-7 7-7"
                  />
                </svg>
              </button>
              <button
                id="nextBtn"
                class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-white bg-opacity-70 hover:bg-opacity-100 transition p-3 rounded-full focus:outline-none"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  class="w-8 h-8 text-gray-800"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </button>
            </div>
          </div>

          <!-- Details Section -->
          <div class="w-full lg:w-1/2 p-5">
            <h1 class="text-3xl font-bold mb-4 sm:text-4xl lg:text-5xl">
              <%= product.productName %>
            </h1>
            <hr class="line h-px w-full bg-black border-0 dark:bg-gray-700" />
            <p class="text-3xl font-bold mt-2 mb-6">
              Rp.<%= product.price.toLocaleString() %>
            </p>
            <div class="mb-4">
              <h2 class="text-lg">Deskripsi</h2>
              <hr
                class="h-px w-2/3 bg-black border-0 dark:bg-gray-700 mt-1 mb-1"
              />
              <p class="text-gray-700">
                <strong>Kategori:</strong> <%= product.category.name %><br />
                <strong>Kondisi:</strong> <%= product.condition %><br />
              </p>
            </div>
            <p class="text-gray-700 mb-6 pr-0 xl:pr-72" id="productDescription">
              <span id="descriptionText">
                <%= product.description.length > 100 ?
                product.description.substring(0, 100) : product.description %>
              </span>
              <span
                class="font-bold"
                id="dots"
                style="display: <%= product.description.length > 100 ? 'inline' : 'none' %>;"
                >...</span
              >
              <span class="hidden" id="more">
                <%= product.description.substring(100) %>
              </span>
              <% if (product.description.length > 100) { %>
              <button
                class="font-bold mb-2"
                onclick="readMoreFunction()"
                id="myBtn"
              >
                Lihat Selengkapnya
              </button>
              <% } %>
            </p>

            <div class="flex flex-col lg:w-1/3">
              <!-- Contact Seller Button -->
              <button
                class="mb-2 border-2 border-black rounded-3xl bg-white text-xl font-light py-4 hover:bg-gray-100 transition delay-100"
                onclick="location.href='https://wa.me/<%= seller.phone %>'"
              >
                <img
                  class="inline mr-2 max-w-8 max-h-8"
                  src="/images/whatsapp2.svg"
                  alt="Whatsapp"
                />
                Hubungi Penjual
              </button>
              <!-- Make an Offer Button -->
              <button
                class="mb-2 border-2 border-black rounded-3xl bg-white text-xl font-light py-4 hover:bg-gray-100 transition delay-100"
                onclick="document.getElementById('offer-modal').classList.remove('hidden')"
              >
                <img
                  class="inline mr-2 max-w-8 max-h-8"
                  src="/images/auction.svg"
                  alt="Auction"
                />
                Buat Penawaran
              </button>
            </div>

            <p class="font-light lg:w-2/3 my-7">
              *Berhati-hatilah dalam melakukan proses transaksi, Pastikan
              kembali sebelum membuat penawaran, membeli, dan menghubungi
            </p>

            <h2 class="text-3xl font-light">Informasi Penjual</h2>
            <hr
              class="line h-px w-full bg-black border-0 dark:bg-gray-700 mt-1 mb-1"
            />
            <div class="flex flex-row items-center">
              <div>
                <img
                  class="w-20 h-20 rounded-full my-3 hover:border-2 hover:border-gray-300 transition delay-100 cursor-pointer"
                  onclick="location.href = '/profile/<%= seller._id %>'"
                  src="/<%= seller.profilePicturePath %>"
                  alt="Profile Photo"
                />
              </div>
              <div>
                <div class="flex flex-col ml-3">
                  <div>
                    <a
                      class="font-semibold text-2xl hover:underline transition delay-100"
                      href="/profile/<%= seller._id %>"
                      ><%= seller.username %></a
                    >
                    <div>
                      <div class="flex flex-row items-center">
                        <div>
                          <img
                            class="w-4 h-auto max-w-10"
                            src="/images/svg/location_1.svg"
                            alt="Location Icon"
                          />
                        </div>
                        <div>
                          <p class="font-light text-lg ml-1">
                            <%= seller.address %>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Offer Modal -->
      <div
        id="offer-modal"
        class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
      >
        <div class="bg-white rounded-lg p-8 w-1/3">
          <h2 class="text-2xl font-bold mb-4">Buat Penawaran</h2>
          <form
            action="/katalog/<%= product._id %>/make-offer"
            method="POST"
            class="flex flex-col"
          >
            <label for="offerPrice" class="mb-2">Harga Penawaran (Rp)</label>
            <input
              type="number"
              name="offerPrice"
              id="offerPrice"
              class="mb-4 p-2 border border-gray-300 rounded"
              placeholder="Masukkan harga penawaran Anda"
              required
            />
            <button
              type="submit"
              class="bg-black text-white rounded-lg py-2 mb-2"
            >
              Kirim Penawaran
            </button>
            <button
              type="button"
              class="bg-gray-500 text-white rounded-lg py-2"
              onclick="document.getElementById('offer-modal').classList.add('hidden')"
            >
              Batal
            </button>
          </form>
        </div>
      </div>
    </div>

